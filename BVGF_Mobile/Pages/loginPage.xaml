<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BVGF.Pages.loginPage"
             xmlns:custom="clr-namespace:BVGF.CustomControls"
             Title="Login"
             BackgroundColor="#F5F5F5"
             NavigationPage.HasNavigationBar="False">

    <Grid>
    <ScrollView>
        <Grid RowDefinitions="*,Auto,*" Padding="40,20">

            <!-- Logo/Header Section -->
            <StackLayout Grid.Row="0" VerticalOptions="End" HorizontalOptions="Center">
                <!-- Fixed Frame with reduced CornerRadius -->
                <Frame BackgroundColor="White" 
                       HasShadow="True" 
                       CornerRadius="50" 
                       WidthRequest="85" 
                       HeightRequest="85"
                       HorizontalOptions="Center"
                       Padding="0">
                    <Image Source="logo.jpeg" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"
                           Aspect="AspectFit"/>
                </Frame>

                <Label Text="Welcome Back!" 
                       FontSize="28" 
                       FontAttributes="Bold" 
                       TextColor="#333333" 
                       HorizontalOptions="Center" 
                       Margin="0,20,0,10"/>

                <Label Text="Sign in to your account" 
                       FontSize="16" 
                       TextColor="#666666" 
                       HorizontalOptions="Center"/>
            </StackLayout>

            <!-- Login Form Section -->
            <StackLayout Grid.Row="1" Spacing="20" Margin="0,40,0,20">

                <!-- Mobile Number Input -->
                <Frame BackgroundColor="White" 
                       HasShadow="True" 
                       CornerRadius="10" 
                       Padding="0">
                    <StackLayout Orientation="Horizontal" Padding="15,10">
                        <Label Text="ðŸ‘¤"  
                               FontSize="23" 
                               VerticalOptions="Center" 
                               Margin="0,1,0,0"/>
                        <Entry x:Name="PasswordEntry" 
                               Placeholder="Enter your mobile number" 
                               Keyboard="Numeric"
                               FontSize="16" 
                               TextColor="Black"
                               MaxLength="10"
                               HorizontalOptions="FillAndExpand" 
                               VerticalOptions="Center"/>
                    </StackLayout>
                </Frame>

                <!-- Show My Numbers Button -->
                <!--<Button Text="ðŸ“‹ Show My SIM Numbers" 
                        BackgroundColor="Transparent" 
                        TextColor="#4A90E2" 
                        FontSize="14" 
                        BorderColor="#4A90E2"
                        BorderWidth="1"
                        CornerRadius="8" 
                        HeightRequest="40" 
                        Clicked="OnShowMyNumbersClicked"/>-->

                <!-- Remember Me & Forgot Password -->
                <StackLayout Orientation="Horizontal" Margin="5,0">
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                        <CheckBox x:Name="RememberMeCheckBox" Color="#4A90E2"/>
                        <Label Text="Remember me" 
                               FontSize="14" 
                               TextColor="#666666" 
                               VerticalOptions="Center"/>
                    </StackLayout>
                    <Label Text="Forgot Password?" 
                           FontSize="14" 
                           TextColor="#4A90E2" 
                           HorizontalOptions="EndAndExpand" 
                           VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnForgotPasswordTapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>

                <!-- Login Button -->
                <Button x:Name="LoginButton" 
                        Text="LOGIN" 
                        BackgroundColor="#4A90E2" 
                        TextColor="White" 
                        FontSize="16" 
                        FontAttributes="Bold" 
                        CornerRadius="10" 
                        HeightRequest="50" 
                        Margin="0,20,0,0" 
                        Clicked="OnLoginClicked"/>

                <!-- Loading Indicator -->
                <!--<ActivityIndicator x:Name="LoadingIndicator" 
                                   IsVisible="False" 
                                   IsRunning="False" 
                                   Color="#4A90E2" 
                                   HorizontalOptions="Center"/>-->

                <!-- Security Note -->
                <Label Text="ðŸ”’ For security, we verify your number with your device SIM" 
                       FontSize="12" 
                       TextColor="#999999" 
                       HorizontalOptions="Center" 
                       HorizontalTextAlignment="Center" 
                       Margin="0,10,0,0"/>

            </StackLayout>

            <!-- Sign Up Section -->
            <StackLayout Grid.Row="2" VerticalOptions="End" HorizontalOptions="Center">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Label Text="Don't have an account? " 
                           FontSize="14" 
                           TextColor="#666666" 
                           VerticalOptions="Center"/>
                    <Label Text="Sign Up" 
                           FontSize="14" 
                           TextColor="#4A90E2" 
                           FontAttributes="Bold" 
                           VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnSignUpTapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>

                <!-- Terms and Privacy -->
                <Label Text="By continuing, you agree to our Terms of Service and Privacy Policy" 
                       FontSize="12" 
                       TextColor="#999999" 
                       HorizontalOptions="Center" 
                       HorizontalTextAlignment="Center" 
                       Margin="0,10,0,0"/>
            </StackLayout>

        </Grid>
    </ScrollView>

        <custom:CustomToastControl x:Name="Toast" />
    </Grid>
</ContentPage>